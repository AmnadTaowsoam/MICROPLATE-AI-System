# Database
# Use in-cluster service name and default Postgres port
#DATABASE_URL=postgresql://postgres:password@postgres:5432/microplate
DATABASE_URL=postgresql://postgres:password@localhost:5432/microplate

# Redis
# Use in-cluster service name
#REDIS_HOST=redis
REDIS_HOST=localhost
REDIS_URL=redis://localhost:6379
#REDIS_URL=redis://microplate-redis:6379
REDIS_LOG_ENABLED=true
REDIS_LOG_CHANNEL=microplate:prediction-db:logs
REDIS_ERROR_CHANNEL=microplate:prediction-db:errors

# Server
PORT=6406
NODE_ENV=production

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# CORS
ENABLE_CORS=true
CORS_ALLOWED_ORIGINS=http://localhost:6410,http://localhost:6403
CORS_ALLOWED_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Origin, X-Requested-With, Content-Type, Accept, Authorization
CORS_EXPOSED_HEADERS=
CORS_MAX_AGE=600

