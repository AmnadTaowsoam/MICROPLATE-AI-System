# Database
# Use in-cluster service name and default Postgres port
DATABASE_URL=postgresql://postgres:password@microplate-postgres:5432/microplates

# Redis
# Use in-cluster service name
REDIS_URL=redis://microplate-redis:6379
REDIS_LOG_ENABLED=true
REDIS_LOG_CHANNEL=microplate:prediction-db:logs
REDIS_ERROR_CHANNEL=microplate:prediction-db:errors

# Server
PORT=6406
NODE_ENV=production

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# JWT Configuration
JWT_ACCESS_SECRET=your-super-secret-access-key-change-in-production
JWT_ISSUER=microplate-auth-service
JWT_AUDIENCE=microplate-api

# Result API Service
RESULT_API_SERVICE_URL=http://result-api-service:6404

